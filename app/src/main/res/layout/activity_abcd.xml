<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.gaurang.agrohelper.abcd">





    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView"
        android:layout_gravity="right" >
        <RadioGroup
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:id="@+id/rg">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="भूमि का क्षेत्रफल"
                android:id="@+id/textView1"
                android:textSize="25dp"
                android:textStyle="bold"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/editText12"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:autoText="false"
                android:hint="वर्ग किमी" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text=" फसल प्रकार का चयन"
                android:id="@+id/textView"
                android:textSize="25dp"
                android:layout_marginTop="20dp"
                android:textStyle="bold"/>




            <RadioButton
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:text="ज्वार"
                android:id="@+id/r1"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="20dp"
                android:textSize="19dp"
                android:checked="true"
                />

            <RadioButton
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:text="संकर ज्वार"
                android:id="@+id/r2"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="5dp"
                android:textSize="19dp"
                android:checked="false" />
            <RadioButton
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:text="मक्का"
                android:id="@+id/r3"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="5dp"
                android:textSize="19dp"
                android:checked="false" />

            <RadioButton
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:text="बाजरा"
                android:id="@+id/r4"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="5dp"
                android:textSize="19dp"
                android:checked="false" />
            <RadioButton
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:text="संकर बाजरा"
                android:id="@+id/r5"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="5dp"
                android:textSize="19dp"
                android:checked="false" />
            <RadioButton
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:text="पहाड़ी बाजरा"
                android:id="@+id/r6"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="5dp"
                android:textSize="19dp"
                android:checked="false" />

            <RadioButton
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:text="मूंगफली"
                android:id="@+id/r7"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="5dp"
                android:textSize="19dp"
                android:checked="false" />
            <RadioButton
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:text="सूरजमुखी"
                android:id="@+id/r8"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="5dp"
                android:textSize="19dp"
                android:checked="false" />



            <RadioButton
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:text="नाइजर"
                android:id="@+id/r9"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="5dp"
                android:textSize="19dp"
                android:checked="false" />
            <RadioButton
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:text="राजमा"
                android:id="@+id/r10"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="5dp"
                android:textSize="19dp"
                android:checked="false" />
            <RadioButton
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:text="अरहर"
                android:id="@+id/r11"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="5dp"
                android:textSize="19dp"
                android:checked="false" />

            <RadioButton
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:text="रबी ज्वार"
                android:id="@+id/r12"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="5dp"
                android:textSize="19dp"
                android:checked="false" />
            <RadioButton
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:text="कुसुम"
                android:id="@+id/r13"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="5dp"
                android:textSize="19dp"
                android:checked="false" />

            <RadioButton
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:text="ग्राम"
                android:id="@+id/r14"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="5dp"
                android:textSize="19dp"
                android:checked="false" />
            <RadioButton
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:text="अलसी का बीज"
                android:id="@+id/r15"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="5dp"
                android:textSize="19dp"
                android:checked="false" />
            <RadioButton
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:text="रबी सूरजमुखी"
                android:id="@+id/r16"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="5dp"
                android:textSize="19dp"
                android:checked="false" />

            <Button
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="यहां दबाएं"
                android:textSize="17dp"
                android:id="@+id/b1"
                android:layout_marginRight="100dp"
                android:layout_marginTop="20dp"
                android:layout_gravity="right" />

        </RadioGroup>



    </ScrollView>


</RelativeLayout>
