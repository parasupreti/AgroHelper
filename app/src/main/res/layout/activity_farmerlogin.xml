<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.gaurang.agrohelper.farmerlogin">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="लॉग इन करने के लिए यहां क्लिक करें"
        android:id="@+id/button"
        android:background="#005582"
        android:textColor="#ffffff"
        android:onClick="signin"
        android:layout_centerVertical="true"
        android:layout_alignEnd="@+id/editText"
        android:layout_alignStart="@+id/editText" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/editText"
        android:longClickable="false"
        android:linksClickable="false"
        android:hint="अपना पासवर्ड डालें"
        android:layout_below="@+id/editText2"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText2"

        android:hint="अपना मोबाइल नंबर दर्ज करें"
        android:layout_alignParentTop="true"
        android:layout_marginTop="69dp"
        android:layout_alignEnd="@+id/editText"
        android:layout_alignStart="@+id/editText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="पंजीकृत नहीं? पंजीकरण केलिए क्लिक करें"
        android:id="@+id/textView"
        android:onClick="signup"
        android:textSize="18dp"
        android:textStyle="bold"
        android:textColor="#005582"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="60dp" />





</RelativeLayout>

